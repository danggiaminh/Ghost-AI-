SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=replace_with_smtp_username
SMTP_PASS=replace_with_smtp_password_or_app_password
SMTP_FROM=ghost-alerts@example.com
SMTP_USE_TLS=true

AI_TIMEOUT_SECONDS=10
MAX_UPLOAD_BYTES=5242880
